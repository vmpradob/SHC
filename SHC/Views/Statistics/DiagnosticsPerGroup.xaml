<Page x:Class="SHC.Views.Statistics.DiagnosticsPerGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SHC.Views.Statistics"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="Diagnósticos más comunes por edad y sexo"
      d:DesignHeight="562"
      d:DesignWidth="1072"
      mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="100" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>

			<Label Grid.Row="0"
			       HorizontalAlignment="Left"
			       VerticalAlignment="Center"
			       Content="Especifíque el grupo del que desea buscar información"
			       FontSize="20"
			       Foreground="RoyalBlue" />

			<StackPanel Grid.Row="1"
			            Margin="5,0,0,0"
			            Orientation="Horizontal">
				<ComboBox x:Name="ComboBoxGroups"
				          Width="200"
				          Height="30"
				          VerticalContentAlignment="Center"
				          FontSize="18" />

				<ComboBox x:Name="ComboBoxGenders"
				          Width="150"
				          Height="30"
				          VerticalContentAlignment="Center"
				          FontSize="18" />

				<Button x:Name="ButtonSearch"
				        Click="ButtonSearch_Click"
				        Content="Buscar"
				        Style="{StaticResource SaveEditButtonStyle}" />
			</StackPanel>
		</Grid>

		<lvc:CartesianChart Grid.Row="1"
		                    HorizontalAlignment="Stretch"
		                    VerticalAlignment="Stretch"
		                    LegendLocation="Left"
		                    Series="{Binding SeriesCollection}">
			<lvc:CartesianChart.AxisX>
				<lvc:Axis Title="Diagnósticos"
				          FontSize="18"
				          Labels="{Binding Labels}"
				          Separator="{Binding Separator}" />
			</lvc:CartesianChart.AxisX>
			<lvc:CartesianChart.AxisY>
				<lvc:Axis Title="Número de incidencias"
				          FontSize="18"
				          LabelFormatter="{Binding Formatter}" />
			</lvc:CartesianChart.AxisY>
		</lvc:CartesianChart>
	</Grid>
</Page>
